            android:text="Go Back and save"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginTop="230dp"
            android:layout_marginLeft="120dp"
            android:backgroundTint="@android:color/holo_blue_dark"/>

        <Button
